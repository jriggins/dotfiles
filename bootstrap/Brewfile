# https://github.com/Homebrew/homebrew-bundle#usage

# A cat(1) clone with syntax highlighting and Git integration.
brew "bat"
# Need to run `brew link coreutils`
brew "coreutils"
# Code line counter
brew "cloc"
brew "ctop"
# DNS client
brew "dog"
brew "direnv"
# Faster 'find'
brew "fd"
# Fuzzy finder
brew "fzf"
# GitHub CLI
brew "gh"
brew "git"
brew "git-lfs"
# Curses-based system monitoring tool
brew "glances"
# GNU time utility (installs as 'gtime')
brew "gnu-time"
# Newer top
brew "htop"
# HTTP client
brew "httpie"
# JSON processor
brew "jq"
# Kubernetes CLI
brew "k9s"
# ncurses-based log file viewer
brew "lnav"
# Mac App Store CLI
brew "mas"
brew "neovim"
# Manage symlinks
brew "stow"
# Faster grep
brew "the_silver_searcher"
# Simplified man pages with examples
brew "tldr"
# Terminal Multiplexer (a better Screen :) )
brew "tmux"
# List directory contents in a tree format
brew "tree"
# Ctags
brew "universal-ctags/universal-ctags/universal-ctags", args: ["HEAD"]
# HTTP client
brew "wget"
# HTTP benchmarking tool
brew "wrk"

# Command tab assistant
cask "alfred"
# A non-shitty windows switcher
cask "alt-tab"
# API documentation browser
cask "dash"
# Help for managing multiple time zones
cask "clocker"
# SQL thick client
cask "dbeaver-community"
# Copy buffer manager
cask "copyq"
cask "docker"
cask "evernote"
cask "firefox"
cask "iterm2"
# Keyboard customizer
cask "karabiner-elements"
# Mac screen sleep manager
cask "keepingyouawake"
cask "slack"
# Good editor. Ok IDE.
cask "visual-studio-code"
