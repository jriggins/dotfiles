
# NeoVim
alias v='nvim'
alias vi='nvim'
alias vim='nvim'
alias view='nvim -R'

# Tree with a maxdepth of 3 and show filetypes
alias t='tree -LF 3'

# Bundler
alias bi='bundle install'

# Miscellaneous
alias l='less'

# View GitHub PRs associated with the current directory
alias viewpr='gh pr view -w'

alias dc='docker-compose'

# View current branch in GitHub as a web page
alias ghview='gh repo view -w -b `git branch --show-current`'
